# ============================================================
# ShadowAgent SDK - Environment Configuration (for testing)
# ============================================================
# Copy this file to .env and fill in the values

# ------------------------------------------------------------
# Aleo Configuration (REQUIRED for on-chain operations)
# ------------------------------------------------------------

# Your Aleo private key
# Generate with: leo account new
# Format: APrivateKey1zkp...
ALEO_PRIVATE_KEY=

# Aleo network: mainnet, testnet
ALEO_NETWORK=testnet

# Aleo RPC URL
ALEO_RPC_URL=https://api.explorer.aleo.org/v1

# ------------------------------------------------------------
# Facilitator Configuration
# ------------------------------------------------------------

# Facilitator service URL
FACILITATOR_URL=http://localhost:3001

# ------------------------------------------------------------
# Agent Configuration (for running as an agent)
# ------------------------------------------------------------

# Service type: 1=NLP, 2=Vision, 3=Code, 4=Data, 5=Audio, 6=Multi, 7=Custom
SERVICE_TYPE=1

# Price per request in microcents (100000 = $0.10)
PRICE_PER_REQUEST=100000

# Registration bond amount in microcredits (default: 10000000 = 10 credits)
# Higher bonds provide stronger Sybil resistance
REGISTRATION_BOND=10000000
