# ============================================================
# ShadowAgent Frontend - Environment Configuration
# ============================================================
# Copy this file to .env and fill in the values

# ------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------

# Facilitator API URL
# In development, use the Vite proxy path for CORS-free requests
# In production, use the full facilitator URL
VITE_API_URL=/api

# Direct facilitator URL (for production without proxy)
# VITE_API_URL=https://your-facilitator-url.com

# ------------------------------------------------------------
# Aleo Network Configuration
# ------------------------------------------------------------

# Aleo network: mainnet, testnet
VITE_ALEO_NETWORK=testnet

# ------------------------------------------------------------
# Wallet Configuration (Optional)
# ------------------------------------------------------------

# Enable Leo Wallet integration
VITE_ENABLE_LEO_WALLET=true

# Enable Puzzle Wallet integration
VITE_ENABLE_PUZZLE_WALLET=true

# ------------------------------------------------------------
# Feature Flags (Optional)
# ------------------------------------------------------------

# Enable debug mode (shows additional info in UI)
VITE_DEBUG_MODE=false

# Enable analytics
VITE_ENABLE_ANALYTICS=false
