# ============================================================
# ShadowAgent Facilitator - Environment Configuration
# ============================================================
# Copy this file to .env and fill in the values

# ------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------

# Server port (default: 3001)
PORT=3001

# Environment mode: development, production, test
NODE_ENV=development

# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# CORS origin (default: * for all origins)
# For production, set to your frontend domain
CORS_ORIGIN=http://localhost:5173

# ------------------------------------------------------------
# Aleo Network Configuration (REQUIRED)
# ------------------------------------------------------------

# Aleo network: mainnet, testnet (default: testnet)
ALEO_NETWORK=testnet

# Aleo RPC URL - Get from:
# - Testnet: https://api.explorer.aleo.org/v1
# - Mainnet: https://api.explorer.aleo.org/v1
# - Or use a private RPC provider like Demox Labs
ALEO_RPC_URL=https://api.explorer.aleo.org/v1

# Your deployed ShadowAgent program ID
# After deploying the Leo contract, update this with your program ID
PROGRAM_ID=shadow_agent.aleo

# ------------------------------------------------------------
# Indexer Configuration
# ------------------------------------------------------------

# Cache TTL in milliseconds (default: 300000 = 5 minutes)
CACHE_TTL_MS=300000

# Background indexing interval in milliseconds (default: 60000 = 1 minute)
INDEX_INTERVAL_MS=60000

# Maximum number of agents to cache (default: 10000)
MAX_CACHED_AGENTS=10000

# Initial agent IDs to import on startup (comma-separated)
# Get these from on-chain registrations or your own agent deployments
# Example: INITIAL_AGENT_IDS=123field,456field,789field
INITIAL_AGENT_IDS=

# ------------------------------------------------------------
# Rate Limiting (Optional)
# ------------------------------------------------------------

# Max requests per window per IP (default: 100)
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# ------------------------------------------------------------
# x402 Payment Configuration (Optional)
# ------------------------------------------------------------

# Default price per request in microcents (default: 100000 = $0.10)
DEFAULT_PRICE_PER_REQUEST=100000

# Escrow deadline in blocks (default: 100)
DEFAULT_ESCROW_DEADLINE_BLOCKS=100
